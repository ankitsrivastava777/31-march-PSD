</div>

<script>
    require
        (
            ['jquery', 'mage/translate'],
            function($) {
                $('#click-me').on('click', function(e) {
                    $(this).addClass('expand').css({
                        "margin-left": "-40px",
                        "margin-top": "-43px"
                    });

                    $("#search-box").show();
                    $('.minicart-wrapper').css({
                        "margin-right": "5px",
                        "margin-top": "-236px"
                    });
                    e.stopPropagation();
                    event.preventDefault();
                    return false;
                })
                $("#search-box").click(function(e) {
                    e.stopPropagation();
                });
                $(document).click(function() {
                    $("#search-box").hide();
                    $("#click-me").removeClass("expand").css({
                        "margin-left": "-40px",
                        "margin-top": "-74px"
                    });
                    $('.minicart-wrapper').css({
                        "margin-right": "5px",
                        "margin-top": "-165px"
                    });
                });
            }
        );
</script>